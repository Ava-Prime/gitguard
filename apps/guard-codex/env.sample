# Core
DATABASE_URL=postgresql+psycopg://gitguard:gitguard@postgres:5432/gitguard
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=default
NATS_URL=nats://nats:4222

# Repo context
REPO_ROOT=/workspace/repo           # ⇨ bind mount your mono/multi-repo root
CODEX_DOCS_DIR=/workspace/repo/docs # ⇨ where MD files are written (built to /site)
CODEX_PORTAL_SITE_DIR=/workspace/repo/site

# GitHub metadata for linking (optional)
GITHUB_OWNER=your-org               # ⇨ set me
GITHUB_REPO=your-repo               # ⇨ set me
GITHUB_WEB_BASE=https://github.com/${GITHUB_OWNER}/${GITHUB_REPO}

# Behavior
CODEX_ENABLE_SYMBOLS=true
CODEX_ENABLE_EMBEDDINGS=true